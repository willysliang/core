{
  "name": "willysliang-core",
  "path": "/core/",
  "title": "willysliang",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "willy",
    "TypeScript",
    "Vue3",
    "music-player",
    "blog",
    "utils"
  ],
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "dev": "pnpm -F \"@willy/base\" dev",
    "build": "pnpm -F \"@willy/base\" build",
    "server": "pnpm -F \"@willy/server\" start",
    "server:pm2": "pnpm -F \"@willy/server\" pm2",
    "blog:dev": "pnpm -F \"@willy/blog\" dev",
    "blog:build": "pnpm -F \"@willy/blog\" build",
    "blog:deploy": "pnpm -F \"@willy/blog\" deploy",
    "next:dev": "pnpm -F \"@willy/nextjs-app\" dev",
    "next:build": "pnpm -F \"@willy/nextjs-app\" build",
    "eslint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "prepare": "husky install",
    "commit": "cz",
    "clean": "pnpm recursive clean --yes"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "cz-customizable": {
    "config": "cz-customizable.js"
  },
  "dependencies": {
    "@icon-park/vue-next": "^1.4.2",
    "@kangc/v-md-editor": "^2.3.18",
    "@rollup/pluginutils": "^5.1.0",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "amfe-flexible": "^2.2.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "highlight.js": "^11.9.0",
    "husky": "^9.0.11",
    "marked": "^10.0.0",
    "postcss-pxtorem": "^6.1.0",
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^12.0.0",
    "child_process": "^1.0.2",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "lint-staged": "^15.2.5",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "prettier-plugin-xml": "^0.1.0",
    "sass": "^1.77.4",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "patchedDependencies": {}
  }
}
